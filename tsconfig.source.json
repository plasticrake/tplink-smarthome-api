{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./lib",
    "allowJs": false
  },
  "include": ["src/**/*"],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "excludeInternal": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "out": "docs"
  }
}
